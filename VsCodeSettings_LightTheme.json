{
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.iconTheme": "material-icon-theme",
  "editor.fontFamily": "Ubuntu Mono",  // Fira Code, DejaVu Sans Mono, Cascadia Mono , Roboto Mono, Consolas, Cascadia Code, Ubuntu Mono, Source Code Pro
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.cursorStyle": "underline",
  "editor.cursorSurroundingLines": 1,
  "editor.mouseWheelZoom": true,
  "editor.smoothScrolling": true,
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "indent",
  "editor.padding.top": 2,
  "editor.padding.bottom": 3,
  "editor.rulers": [80, 120],
  "editor.foldingImportsByDefault": true,
  "editor.foldingMaximumRegions": 65000,
  "editor.defaultFoldingRangeProvider": "ms-python.vscode-pylance",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.accessibilitySupport": "on",  // Consider if needed
  "files.autoSave": "afterDelay",
  "tabnine.experimentalAutoImports": true,
  "update.enableWindowsBackgroundUpdates": false,
  "workbench.editor.enablePreview": false,
  "window.customTitleBarVisibility": "auto",


  "python.formatting.provider": "ruff",  // Use this if it works
  "[python]": {
    "editor.formatOnType": true,
    "editor.defaultFormatter": "charliermarsh.ruff" //Or this one
  },

  // Ruff Configuration (if needed, add or customize):
  // "ruff.format.lineWidth": 120,
  // "ruff.lint.rules": ["E501"],  // Example: ignore line too long

  "code-runner.clearPreviousOutput": true,
  "code-runner.saveFileBeforeRun": true,
  "turboConsoleLog.logFunction": "print",
  "turboConsoleLog.insertEmptyLineAfterLogMessage": true,
  "turboConsoleLog.includeFileNameAndLineNum": true,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "autofold.fold_regex": "^\\s*\"\"\"|^\\s*'''",
    // "autofold.more_fold_regexes": [],  // No need if empty

  "workbench.editorAssociations": {
    "*.xlsx": "gc-excelviewer-excel-editor"
  },

  "remote.SSH.remotePlatform": {
    "pnahid_home": "linux",
    "19.221.12.110": "linux"
  },

  "terminal.integrated.fontFamily": "monospace",  // or a specific monospaced font
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.fontWeight": "normal",  // or specific weight
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorStyleInactive": "underline",
  "terminal.integrated.mouseWheelZoom": true,
  "terminal.integrated.scrollback": 1000000,
  "editor.scrollbar.horizontalScrollbarSize": 3,
  "editor.minimap.enabled": false,


  "material-icon-theme.folders.associations": {
    "venv": "environment",
    "references": "docs",
    "modeling": "generator"
  },
  "better-comments.tags": [
    {
      "tag": "TODO",
      "color": "#EA580C",
      "strikethrough": false,
      "bold": false,
      "italic": false
    },
    {
      "tag": "FIXME",
      "color": "#c9031e",
      "backgroundColor": "#FFFFFF"
    },
    {
      "tag": "HACK",
      "color": "#474747",
      "strikethrough": true
    },
    {
      "tag": "IDEA",
      "color": "#FF8C00"
    },
    {
      "tag": "INFO",
      "color": "#0EA5E9"
    },
    {
      "tag": "NOTE",
      "color": "#2563EB"
    }
  ],
  "better-comments.highlightPlainText": false,
  "workbench.colorCustomizations": {
    "editor.background": "#fffefb",
    "editor.lineHighlightBackground": "#dbf7ff80",
    "editor.wordHighlightBackground": "#f2f3c17c",
    "editorCursor.foreground": "#1204daec",
    "editor.selectionBackground": "#D5E8D4",
    "editor.findMatchBackground": "#F7DC6F",
    "editor.findMatchHighlightBackground": "#FAD7A0",
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {"scope": "variable.language.special.self.python", "settings": {"fontStyle": "italic", "foreground": "#be1447"}},
      {"scope": "keyword.control", "settings": {"fontStyle": "italic", "foreground": "#007acc"}},
      {"scope": "variable.other.python", "settings": {"fontStyle": "", "foreground": "#34926e"}},
      {"scope": "keyword.operator", "settings": {"fontStyle": "", "foreground": "#e72b3a"}},
      {"scope": "keyword.control.flow.python", "settings": {"fontStyle": "italic bold", "foreground": "#1F618D"}},
      {"scope": "storage.type", "settings": {"fontStyle": "italic bold", "foreground": "#07bdc4"}},
      {"scope": "storage.type.number.python", "settings": {"fontStyle": "bold", "foreground": "#4e77c4"}},
      {"scope": "constant.language.python", "settings": {"fontStyle": "bold", "foreground": "#c44e58"}},
      {"scope": "storage.type.string.python", "settings": {"fontStyle": "bold", "foreground": "#720455"}},
      {"scope": "storage.type.format.python", "settings": {"fontStyle": "", "foreground": "#b3000f"}},

      {"scope": "variable.parameter.function.language.special.self.python", "settings": {"fontStyle": "italic", "foreground": "#9c65d6"}},
      {"scope": "entity.name.type.class", "settings": {"fontStyle": "italic", "foreground": "#512da8"}},
      {"scope": "meta.function-call.generic.python", "settings": {"fontStyle": "", "foreground": "#ef6c00"}},
      {"scope": "entity.name.function.python", "settings": {"fontStyle": "italic bold", "foreground": "#2874A6"}},

      {"scope": "entity.name.namespace", "settings": {"fontStyle": "", "foreground": "#219999"}},
      {"scope": "meta.attribute.python", "settings": {"fontStyle": "", "foreground": "#ce2121"}},
      {"scope": "variable.parameter.function.language.python", "settings": {"fontStyle": "", "foreground": "#ff8f00"}},
      {"scope": "meta.function-call.arguments.python", "settings": {"fontStyle": "", "foreground": "#0288d1"}},
      {"scope": "support.function.builtin.python", "settings": {"fontStyle": "", "foreground": "#878a00"}},
      {"scope": "punctuation.definition.arguments.end.python", "settings": {"fontStyle": "", "foreground": "#018ba7"}},
      {"scope": "variable.parameter.function.python", "settings": {"fontStyle": "italic", "foreground": "#007acc"}},

      {"scope": "variable.parameter.function-call.python", "settings": {"fontStyle": "", "foreground": "#eba800"}},
      {"scope": "string.quoted.docstring.multi.python", "settings": {"fontStyle": "italic", "foreground": "#c0c0c0"}},
      {"scope": "comment", "settings": {"fontStyle": "italic", "foreground": "#c0c0c0"}},
      {"scope": "string.quoted.single.python", "settings": {"fontStyle": "", "foreground": "#28B463"}},
      {"scope": "string.quoted.double.python", "settings": {"fontStyle": "", "foreground": "#28B463"}},
      {"scope": "keyword.operator.assignment.python", "settings": {"foreground": "#c9031e"}}
    ]
  }


}
